{% extends "layout.njk" %}

{% block content %}

  {% block head %}
    <title>
      .: Gym Manager
    </title>
    <link rel="shortcut icon" href="../../images/favicon.ico" type="image/x-icon">
  {% endblock head %}

  {% block image %}
    <img src="../../images/gym.png" " alt=" logo="Logo" de="de" uma="uma" academia"=" academia""="academia""">
  {% endblock image %}

  <div class="card">
    <section class="avatar" style="background: url(https://source.unsplash.com/collection/8969654/500x500)
      no-repeat center center / cover"></section>
    <form method="POST" action="/instructors?_method=PUT">

      <section class="details">
        <h3>Editar Instrutor</h3>

        {% include 'instructors/form.njk' %}

        <input type="hidden" name="id" value={{instructor.id}} >
      </form>

      <form id="form-delete" method="POST" action="/instructors?_method=DELETE">
        <input type="hidden" name="id" value={{instructor.id}} >
        <button type="submit" class="deleteButton">deletar</button>
      </form>
    </section>

  </div>

{% endblock content %}