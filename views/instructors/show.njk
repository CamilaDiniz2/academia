{% extends "layout.njk" %}

{% block head %}
  <title> .: Gym Manager - {{instructor.name}} </title>
  
{% endblock %}

{% block content %}

  {% block image %}
    <img src="../images/gym.png" alt="Logo de uma academia">
  {% endblock image %}

  <div class="card">
    <section class="avatar"
      style="background: url( {{ instructor.avatar_url }} ) 
      no-repeat center center / cover">
    </section>

    <section class="details">
      <h3>Detalhes</h3>
      <div class="item">
        <div>Instrutor</div>
        <div>{{instructor.name}}</div>
      </div>

      <div class="item">
        <div>Idade</div>
        <div>{{instructor.birth}}</div>
      </div>

      <div class="item">
        <div>Sexo</div>
        <div>{{"Masculino" if instructor.gender == "M" else "Feminino"}}</div>
      </div>

      <div class="item">
        <div>Acompanhamentos</div>
        <div>
          {% for item in instructor.services %}
          <span> {{item}} </span>
          {% endfor %}
        </div>
      </div> 

      <div class="item">
        <div>In√≠cio</div>
        <div>{{instructor.created_at}}</div>
      </div>

      <a href="#" class="edite"> Editar </a>

      </section>     

      
    
  </div>
{% endblock content %}